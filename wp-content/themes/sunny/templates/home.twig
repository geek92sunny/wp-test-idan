{% extends "base.twig" %}

{% block content %}
	<div class="content-wrapper">
		<article class="post-type-{{post.post_type}}" id="post-{{post.ID}}">
			<section class="article-content">
				<h1 class="article-h1">{{post.title|e}}</h1>
				<div class="article-body">
					{{post.content}}
				</div>
			</section>
		</article>
	</div><!-- /content-wrapper -->

	<div class="container post-wrp">
		<h2>{{ _e('Recent Posts') }}</h2>

		<div class="posts">
			{% include 'post_grid.twig' with  {posts: recent_posts} %}
		</div>
	</div>

	<div class="load-more-sec container">
		<div class="text-center">
			<button class="btn btn-primary load-more">{{_e('Load more')}}</button>
		</div>
	</div>	
{% endblock %}