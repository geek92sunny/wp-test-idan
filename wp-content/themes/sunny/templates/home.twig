{% extends "base.twig" %}

{% block content %}
	<div class="content-wrapper">
		<article class="post-type-{{post.post_type}}" id="post-{{post.ID}}">
			<section class="article-content">
				<h1 class="article-h1">{{post.title | e}}</h1>
				<div class="article-body">
					{{post.content}}
				</div>
			</section>
		</article>
	</div><!-- /content-wrapper -->

	<div class="container">
		{% for post in all_posts %}
			{% include 'partial/post/post.twig' %}
		{% endfor %}
	</div>	
{% endblock %}