{% extends "base.twig" %}

{% block content %}
	{% for post in posts %}
		<div class="post-details container">
			<h1>{{post.title|e}}</h1>
			<div class="meta-info">
				<span>{{_e('By')}} <strong>{{post.author.name}}</strong></span>, <span>{{_e('at')}} <strong>{{post.date}}</strong></span>
			</div>
			{% if post.categories %}
				<div class="categories">
					{{ post.categories|join(', ') }}
				</div>
			{% endif %}
			{% if post.thumbnail.src %}
				<div class="post-thumb text-center">
					<img src="{{post.thumbnail.src}}">
				</div>
			{% endif %}
			<div class="content">
				{{post.content}}
			</div>			
		</div>
	{% endfor %}
{% endblock %}
